<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_dashboard"
    app:startDestination="@id/searchFragment">


    <fragment
        android:id="@+id/searchFragment"
        android:name="com.purelab.view.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_search_to_itemlist"
            app:destination="@id/itemListFragment" />
    </fragment>

    <fragment
        android:id="@+id/itemListFragment"
        android:name="com.purelab.view.itemlist.ItemListFragment"
        android:label="itemListFragment"
        tools:layout="@layout/fragment_itemlist">
        <action
            android:id="@+id/action_itemList_to_dashboardFragment3"
            app:destination="@id/dashboardFragment3" />
    </fragment>
    <fragment
        android:id="@+id/dashboardFragment3"
        android:name="com.purelab.view.itemdetail.DashboardFragment3"
        android:label="DashboardFragment3"
        tools:layout="@layout/fragment_dashboard3">
        <action
            android:id="@+id/action_dashboardFragment3_to_searchFragment"
            app:destination="@id/searchFragment"
            app:popUpTo="@id/searchFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- gallery dynamic feature module-->
    <include-dynamic
        android:id="@+id/nav_graph_gallery"
        android:name="com.smarttoolfactory.gallery"
        app:graphResName="nav_graph_gallery"
        app:moduleName="gallery">
        <argument
            android:name="category"
            android:defaultValue="0"
            app:argType="integer" />
    </include-dynamic>

</navigation>