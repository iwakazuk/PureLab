<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_home"
    app:startDestination="@id/homeFragment1">


    <fragment
        android:id="@+id/homeFragment1"
        android:name="com.purelab.view.home.HomeFragment"
        android:label="PureLab"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment1_to_homeFragment2"
            app:destination="@id/itemDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/itemDetailFragment"
        android:name="com.purelab.view.itemdetail.ItemDetailFragment"
        android:label="ItemDetailFragment"
        tools:layout="@layout/fragment_itemdetail">
    </fragment>

    <!-- gallery dynamic feature module-->
    <include-dynamic
        android:id="@+id/nav_graph_gallery"
        android:name="com.smarttoolfactory.gallery"
        app:graphResName="nav_graph_gallery"
        app:moduleName="gallery">
        <argument
            android:name="count"
            android:defaultValue="0"
            app:argType="integer" />
    </include-dynamic>

</navigation>