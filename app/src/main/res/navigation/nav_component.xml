<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navi_home"
    tools:ignore="InvalidNavigation">

    <fragment android:id="@+id/navi_home"
        android:name="com.purelab.view.bottom.home.HomeFragment"
        android:label="home"/>

    <fragment android:id="@+id/navi_search"
        android:name="com.purelab.view.bottom.search.SearchFragment"
        android:label="search">
        <action
            android:id="@+id/nav_itemList"
            app:destination="@id/item_list" />
    </fragment>

    <fragment android:id="@+id/navi_favorite"
        android:name="com.purelab.view.bottom.favorite.FavFragment"
        android:label="favorite"/>

    <fragment android:id="@+id/navi_mypage"
        android:name="com.purelab.view.bottom.mypage.MyPageFragment"
        android:label="myPage"/>

    <fragment android:id="@+id/item_list"
        android:name="com.purelab.view.itemlist.ItemListFragment"
        android:label="ItemList"/>
</navigation>